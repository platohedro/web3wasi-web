    class="max-w-lg rounded-lg border border-gray-200 bg-white shadow dark:border-gray-700 dark:bg-neutral-900"
  >
    <div class="p-5">
      <Image
        width={500}
        height={500}
        src={FotoCyper1}
        alt="alt"
        format={"jpg"}
        class="pb-8"
      />
